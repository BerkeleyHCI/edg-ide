<idea-plugin>
  <id>edg_ide</id>
  <name>EDG IDE</name>
  <vendor>Quack quack quack</vendor>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.python</depends>
  <extensions defaultExtensionNs="com.intellij">
    <fileEditorProvider implementation="edg_ide.SplitFileEditorProvider"/>
  </extensions>

  <actions>
    <action id="edg_ide.NavigateToBlockAction" class="edg_ide.NavigateToBlockAction"
            text="Navigate To Block" description="Select the block in the block diagram view of the element at the caret in the code view"
            icon="EdgIcons$.Test">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <keyboard-shortcut first-keystroke="control alt A" second-keystroke="C" keymap="$default"/>
    </action>
  </actions>
</idea-plugin>
