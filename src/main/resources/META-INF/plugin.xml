<idea-plugin>
  <id>edg_ide</id>
  <name>EDG IDE</name>
  <vendor>Quack quack quack</vendor>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.python</depends>
  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="BlockVisualizer" icon="AllIcons.Toolwindows.ToolWindowHierarchy" anchor="right"
                factoryClass="edg_ide.ui.BlockVisualizerFactory"/>
    <projectService serviceImplementation="edg_ide.ui.BlockVisualizerServiceWrapper"/>
    <projectService serviceImplementation="edg_ide.ui.EdgCompilerServiceWrapper"/>
  </extensions>

  <actions>
    <action id="edg_ide.actions.SetKicadLibraryDirectoryAction" class="edg_ide.actions.SetKicadLibraryDirectoryAction"
            text="Set KiCad Library" description="Set the path to KiCad library">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>

    <action id="edg_ide.actions.EmptyCacheAction" class="edg_ide.actions.EmptyCacheAction"
            text="Empty IDE Cache" description="Empty the IDE cache">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>


    <action id="edg_ide.action.SetVisualizerTopAction" class="edg_ide.actions.SetVisualizerTopAction"
            text="Set Visualizer Design" description="Sets the top-level design of the visualizer to the current class"
            icon="AllIcons.Toolwindows.ToolWindowHierarchy">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>

    <action id="edg_ide.actions.RefreshVisualizationAction" class="edg_ide.actions.RefreshVisualizationAction"
            text="Refresh File" description="Refreshes the visualization"
            icon="AllIcons.Actions.Rerun">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <keyboard-shortcut first-keystroke="control shift D" keymap="$default"/>
    </action>


    <action id="edg_ide.action.NavigateToBlockAction" class="edg_ide.actions.NavigateToBlockAction"
            text="Navigate To Block" description="Select the block in the block diagram view of the element at the caret in the code view">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <keyboard-shortcut first-keystroke="control shift G" keymap="$default"/>
    </action>
  </actions>
</idea-plugin>
